<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_180"
        android:background="@color/color_656565"
        >

        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/local_view_render"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_alignParentEnd="true"
            />

        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/remote_view_render"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_no_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_656565"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/iv_robot_1"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:src="@drawable/icon_robot_invoce_call"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="客服摄像头暂时无法使用..."
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/color_ffffff"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rl_call_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_656565"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/iv_robot_2"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:src="@drawable/icon_robot_invoce_call"
                    />

                <TextView
                    android:id="@+id/tv_call_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="呼叫中..."
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/sp_10"
                    android:gravity="center"
                    />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_no_camera_draw"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_51"
            android:layout_alignParentEnd="true"
            android:background="@color/color_656565"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/iv_robot_3"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/icon_robot_invoce_call"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="客服摄像头暂时无法使用..."
                    android:textSize="@dimen/sp_6"
                    android:textColor="@color/color_ffffff"
                    />

            </LinearLayout>

        </RelativeLayout>

        <org.webrtc.SurfaceViewRenderer
            android:visibility="gone"
            android:id="@+id/draw_render"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_51"
            android:layout_alignParentEnd="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            >

            <!--静音-->
            <ImageView
                android:id="@+id/iv_mute"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/webrtc_btn_voice_mute"
                android:scaleType="fitXY"
                />

            <!--挂断-->
            <ImageView
                android:id="@+id/iv_hang_up"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/webrtc_cancel"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dp_24"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服姓名XXXX 工号XXXXX"
            android:textColor="@color/color_0000ff"
            android:textSize="@dimen/sp_10"
            />
        
        <Chronometer
            android:layout_below="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format="%s"
            android:id="@+id/timer"
            android:textColor="@color/color_0000ff"
            android:textSize="@dimen/sp_10"
            />

    </RelativeLayout>

</RelativeLayout>