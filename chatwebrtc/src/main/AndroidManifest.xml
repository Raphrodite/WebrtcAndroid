<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatwebrtc"
    >

    <application>
        <service
            android:name="com.example.chatwebrtc.control.SimulatedClickService"
            android:enabled="true"
            android:exported="true"
            android:label="可视化自研远程协助"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
        <activity
            android:name=".control.AccessibilityOpenHelperActivity"
            />

        <service android:name=".service.CallChatService"/>

    </application>

</manifest>